{
  "name": "api-template",
  "version": "0.0.0",
  "description": "XXX",
  "main": "dist/index.js",
  "repository": "https://github.com/BlueForestTrees/api-XXX.git",
  "author": "slim <smedini@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "build": "rimraf dist && babel src --out-dir dist/js && copyfiles etc/** dist",
    "dev": "node --version && cross-env DEBUG=api:* PORT=XXX REST_PATH=src/rest nodemon src/index.js --exec babel-node",
    "test": "cross-env DEBUG=api:*,test:* NODE_ENV=test PORT=XXX REST_PATH=src/rest mocha --recursive --require babel-register --exit \"test/**/*.js\""
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-transform-builtin-extend": "1.1.2",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-stage-3": "6.24.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "chai-http": "3.0.0",
    "copyfiles": "2.0.0",
    "jsonpath": "1.0.0",
    "mocha": "5.0.0",
    "nodemon": "1.17.3",
    "rimraf": "2.6.2",
    "test-api-express-mongo": "1.0.13"
  },
  "dependencies": {
    "cross-env": "5.2.0",
    "debug": "3.1.0",
    "express-blueforest": "1.1.11",
    "express-validator": "5.3.0",
    "items-service": "1.0.13",
    "lodash": "4.17.11",
    "mongo-registry": "1.0.15"
  },
  "babel": {
    "presets": [
      "env",
      "stage-3"
    ],
    "plugins": [
      "transform-runtime",
      [
        "transform-builtin-extend",
        {
          "globals": [
            "Error",
            "Array"
          ]
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": []
      }
    }
  }
}
